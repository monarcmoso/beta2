<?xml version="1.0"?>
<config>
 <tabs>
       <mmd translate="label">
			<label>Mage Mobile Design</label>
			<sort_order>400</sort_order>
		</mmd>
    </tabs>

    <sections>        
                <multiselectnavigation translate="label comment" module="multiselectnavigation">
                    <label>Multi Select Layered Navigation</label>
					<tab>mmd</tab>
                    <frontend_type>text</frontend_type>
                    <sort_order>800</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
					<groups>
						<general translate="label">
							<label>Settings</label>
							<sort_order>600</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<fields>                    
								<cat_style translate="label">
									<label>Show Sub Categories</label>
									<frontend_type>select</frontend_type>
									<source_model>multiselectnavigation/system_config_source_category</source_model>
									<sort_order>10</sort_order>
									<show_in_default>1</show_in_default>
									<show_in_website>1</show_in_website>
									<show_in_store>1</show_in_store>
								</cat_style>
								<price_style translate="label">
									<label>Price Filter</label>
									<frontend_type>select</frontend_type>
									<source_model>multiselectnavigation/system_config_source_price</source_model>
									<sort_order>20</sort_order>
									<show_in_default>1</show_in_default>
									<show_in_website>1</show_in_website>
									<show_in_store>1</show_in_store>
								</price_style>
								<remove_links translate="label">
									<label>Remove Links from the Navigation</label>
									<frontend_type>select</frontend_type>
									<source_model>adminhtml/system_config_source_yesno</source_model>
									<sort_order>30</sort_order>
									<show_in_default>1</show_in_default>
									<show_in_website>1</show_in_website>
									<show_in_store>1</show_in_store>
									<comment><![CDATA[This prevents `Duplicate content` penalty from search engines, however customers with disabled JavaScript won't be able to use the filters]]></comment>
								</remove_links>
								<!--
								<max_h translate="label">
									<label>Maximum Height (px)</label>
									<frontend_type>text</frontend_type>
									<sort_order>40</sort_order>
									<show_in_default>1</show_in_default>
									<show_in_website>1</show_in_website>
									<show_in_store>1</show_in_store>
									<comment><![CDATA[Leave empty to remove height constraint]]></comment>
								</max_h>
								-->
							</fields>
						</general>
					</groups>
                </multiselectnavigation>
           
    </sections>
</config>